<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Base.Home.Fragment.MinePager.Commodit"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_duihuanyemianbeijing">
            <ImageView
                android:id="@+id/img_zuofanhui"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/next"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/tv_shangpin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商 品 兑 换"
                android:textSize="17dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="35dp"
                android:layout_centerHorizontal="true" />
            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="共0张"
                android:textSize="12dp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/ic_yuanjiao"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_shangpin"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_duihuanjilu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:src="@drawable/icon_duihuanjilu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换记录"
                android:textColor="#333"
                android:textSize="14dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_duihuanjilu"
                android:layout_marginLeft="5dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fcfcfc"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_duihuanjifeng"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:src="@drawable/icon_duihuanguizhe" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换规则"
                android:textColor="#333"
                android:textSize="14dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_duihuanjifeng"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#fcfcfc"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每笔订单仅限使用一张兑换卷"
            android:textSize="12dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>