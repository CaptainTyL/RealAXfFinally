<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/main_color">

        <ImageView
            android:id="@+id/img_order_back"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:padding="11dp"
            android:src="@drawable/next" />

        <TextView
            android:id="@+id/tv_xQshop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品详情"
            android:textColor="@color/color_3"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/img_shard"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:padding="11dp"
            android:src="@drawable/shard" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="45dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_xiangqing_shopImg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="40dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_big_shopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="康师傅方便面"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_VipPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:text="38"
                    android:textColor="@color/price_color"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_nolmarprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/tv_VipPrice"
                    android:text="38"
                    android:textSize="14dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_background" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="--------商品详情--------"
                android:textColor="@color/price_color"
                android:textSize="13dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/tv_xiangqing_pingpai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品         牌"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@id/tv_xiangqing_pingpai"
                    android:text="康师傅"
                    android:textColor="@color/color_3"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp">

                <TextView
                    android:id="@+id/tv_xiangqing_guige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品规格"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@id/tv_xiangqing_guige"
                    android:text="150克"
                    android:textColor="@color/color_3"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp">

                <TextView
                    android:id="@+id/tv_xiangqing_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保质期限"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@id/tv_xiangqing_data"
                    android:text="6月"
                    android:textColor="@color/color_3"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="13dp"
                android:background="@color/color_background" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="--------图文详情--------"
                android:textSize="13dp" />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
       >
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_background"
            android:layout_alignParentTop="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49.5dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rela_shoucang"
                android:layout_width="70dp"
                android:layout_height="49.5dp"
                android:background="@color/white">
                <com.ldoublem.thumbUplib.ThumbUpView
                    android:id="@+id/img_shoucang"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:cracksColor="#33475f"
                    app:fillColor="#f00"
                    app:unlikeType="1"
android:layout_centerHorizontal="true"

                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    android:textSize="10sp"
                    android:layout_below="@id/img_shoucang"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"/>
            </RelativeLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_background"/>
            <RelativeLayout
                android:id="@+id/img_addcar_shop"
                android:layout_width="70dp"
                android:layout_height="49.5dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/img_shopCar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/xqgouwucar"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购物车"
                    android:textSize="10sp"
                    android:layout_below="@id/img_shopCar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49.5dp"
                android:background="@color/main_color">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去购物车看看"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_3"
                    android:textSize="15dp"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>